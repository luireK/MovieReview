<%= simple_form_for @movie, :html => {:multipart =>true} do |f| %>
	<%= select_tag(:category_id, options_for_select(@categories), :prompt => "카테고리를 선택하세요." ) %>
	<%= f.input :picture, as: :file %>
    <%= f.hidden_field :picture_cache %>
	<%= f.input :title, label: "Movie Title" %>
	<%= f.input :description %>
	<%= f.input :director %>
	<%= f.button :submit, :class => 'btn-custom2' %>
<% end %>