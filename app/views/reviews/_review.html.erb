<div class="review">
	<div class="review-rating" data-score="<%= review.rating %>"></div>
	<p class="review-comment"><%= review.comment %></p>

	<% if user_signed_in? %>
		<% if review.user_id == current_user.id %>

			<div class="links btn-group">
				<%= link_to "edit", edit_movie_review_path(@movie, review), class: "btn btn-custom" %> 
				<%= link_to "delete", movie_review_path(@movie, review), method: :delete, data: { confirm: "정말 삭제하시겠습니까?" }, class: "btn btn-custom" %>
			</div>
		<% end %>
	<% end %>
</div>