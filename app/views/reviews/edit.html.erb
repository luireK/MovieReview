<div class="col-md-6 col-md-offset-3">
	<div class="edit-review-form">
		<h1>리뷰 수정</h1>

		<%= simple_form_for([@movie, @review]) do |f| %>
			<div id="rating-form">
				<label>별점</label>
			</div>
			<%= f.input :comment %>
			<%= f.button :submit, :class => "btn btn-custom2" %>
		<% end %>
	</div>
</div>

<script>
	$('#rating-form').raty({
			path: '/assets/',
			scoreName: 'review[rating]' 
		});
</script>